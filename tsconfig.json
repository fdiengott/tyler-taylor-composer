{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "react",
    "target": "es6",
    "strict": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/layouts/*": ["./src/layouts/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.astro",
  ],
  "exclude": ["node_modules"]
}
